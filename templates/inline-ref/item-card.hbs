<span class='item-ref tooltip'>
    <img data-id='{{{id}}}' src='{{card.icon}}' />
    {{{card.title}}}
    <span class='tool-tip-content'>
        <div class='item-card'>
            <div class='item-card-title'>
                <img data-id='{{{id}}}' src='{{card.icon}}' />
                <h4 id='{{id}}'>
                    {{{card.title}}}
                </h4>
                <span class='item-label'>
                    {{#if card.code}}<span
                            class='item-label-text'
                        >{{card.code}}</span>{{/if}}
                </span>
            </div>
            <div class='item-card-body'>
                {{#each card.contents}}
                    {{{this}}}
                {{/each}}
            </div>
        </div>
    </span>
</span>